<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:background="@drawable/card_shape_gray_only_right"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_shape_gray"
        android:padding="20dp"
        android:visibility="visible">

        <com.sim.baselibrary.views.CustomImageView.CustomImageView
            android:id="@+id/user_image_default"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:src="@mipmap/photo"
            app:type="circle"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_to_right" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/textViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_image_default"
            android:text="用户登录"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape_gray"
        android:padding="20dp">

        <ImageView
            android:id="@+id/user_collect_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_collect" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_to_right" />

        <TextView
            style="@style/textViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_collect_image"
            android:text="收藏" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_update_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape_gray"
        android:padding="20dp">

        <ImageView
            android:id="@+id/update_version_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_setting" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_to_right" />

        <TextView
            style="@style/textViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/update_version_image"
            android:text="检查更新" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_shape_gray"
        android:padding="20dp">

        <ImageView
            android:id="@+id/user_setting_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_setting" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_to_right" />

        <TextView
            style="@style/textViewStyle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/user_setting_image"
            android:text="设置" />

    </RelativeLayout>

</LinearLayout>