<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_route_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_bus_route_start" />

        <EditText
            android:id="@+id/et_start_station"
            style="@style/editViewStyle"
            android:focusable="false"
            android:hint="请输入起始站如：省科干学院"
            tools:text="省科干学院（公交站）" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_bus_route_end" />

        <EditText
            android:id="@+id/et_end_station"
            style="@style/editViewStyle"
            android:focusable="false"
            android:hint="请输入终点站如：华发商都"
            tools:text="华发商都" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_route"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:text="换乘方案" />

</LinearLayout>